# Example .env for Varavu Selavu Service (backend)
# Copy to .env and fill in values as needed. Do NOT commit real secrets.

# --- App & Environment ---
PROJECT_NAME="Varavu Selavu Service"
VERSION="1.0.0"
DEBUG=true
# local | production
ENVIRONMENT=local

# --- CORS ---
CORS_ALLOW_ORIGINS='["http://localhost:3000","http://127.0.0.1:3000","https://varavu-selavu-frontend-952416556244.us-central1.run.app"]'

# --- Analysis Service ---
ANALYSIS_CACHE_TTL_SEC=60

# --- Chat Providers ---
# OpenAI (used when ENVIRONMENT=production)
OPENAI_API_KEY=
# Optional override (defaults to gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini
// Request timeout (seconds)
OPENAI_TIMEOUT_SEC=300

# Ollama (used when ENVIRONMENT=local)
OLLAMA_BASE_URL=http://localhost:11434
# Optional override (defaults to gpt-oss:20b)
OLLAMA_MODEL=
# Request timeout (seconds)
OLLAMA_TIMEOUT_SEC=300

# --- Google Sheets / GCP ---
# Path to your service account JSON (local dev)
GOOGLE_APPLICATION_CREDENTIALS=
# Set by Cloud Run automatically (leave empty locally)
K_SERVICE=
